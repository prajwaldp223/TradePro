<h1 class="mb-4">Edit Stock</h1>

<div class="admin-form-container">
    <div class="admin-form-header">
        <h2 class="admin-form-title">Stock Details</h2>
    </div>

    <div class="admin-form-content">
        <form action="/admin/stocks/edit/<%= stock.id %>" method="POST">
            <div class="grid grid-cols-2 gap-4">
                <div class="form-group">
                    <label for="id" class="form-label">Stock Symbol</label>
                    <input type="text" id="id" name="id" class="form-control" value="<%= stock.id %>" readonly>
                    <small class="form-text">Symbol cannot be changed</small>
                </div>

                <div class="form-group">
                    <label for="name" class="form-label">Company Name</label>
                    <input type="text" id="name" name="name" class="form-control" value="<%= stock.name %>" required>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="form-group">
                    <label for="price" class="form-label">Current Price ($)</label>
                    <input type="number" id="price" name="price" step="0.01" class="form-control"
                        value="<%= stock.price %>" required>
                </div>

                <div class="form-group">
                    <label for="change" class="form-label">Daily Change ($)</label>
                    <input type="number" id="change" name="change" step="0.01" class="form-control"
                        value="<%= stock.change %>" required>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="form-group">
                    <label for="change_percent" class="form-label">Change Percent (%)</label>
                    <input type="number" id="change_percent" name="change_percent" step="0.01" class="form-control"
                        value="<%= stock.change_percent %>" required>
                </div>

                <div class="form-group">
                    <label for="volume" class="form-label">Volume</label>
                    <input type="number" id="volume" name="volume" class="form-control" value="<%= stock.volume %>"
                        required>
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div class="form-group">
                    <label for="market_cap" class="form-label">Market Cap ($)</label>
                    <input type="number" id="market_cap" name="market_cap" class="form-control"
                        value="<%= stock.market_cap %>" required>
                </div>

                <div class="form-group">
                    <label for="sector" class="form-label">Sector</label>
                    <select id="sector" name="sector" class="form-control" required>
                        <option value="">Select Sector</option>
                        <option value="Technology" <%=stock.sector==='Technology' ? 'selected' : '' %>>Technology
                        </option>
                        <option value="Financial Services" <%=stock.sector==='Financial Services' ? 'selected' : '' %>
                            >Financial Services</option>
                        <option value="Consumer Cyclical" <%=stock.sector==='Consumer Cyclical' ? 'selected' : '' %>
                            >Consumer Cyclical</option>
                        <option value="Healthcare" <%=stock.sector==='Healthcare' ? 'selected' : '' %>>Healthcare
                        </option>
                        <option value="Communication Services" <%=stock.sector==='Communication Services' ? 'selected'
                            : '' %>>Communication Services</option>
                        <option value="Automotive" <%=stock.sector==='Automotive' ? 'selected' : '' %>>Automotive
                        </option>
                        <option value="Energy" <%=stock.sector==='Energy' ? 'selected' : '' %>>Energy</option>
                        <option value="Entertainment" <%=stock.sector==='Entertainment' ? 'selected' : '' %>
                            >Entertainment</option>
                        <option value="Industrials" <%=stock.sector==='Industrials' ? 'selected' : '' %>>Industrials
                        </option>
                        <option value="Real Estate" <%=stock.sector==='Real Estate' ? 'selected' : '' %>>Real Estate
                        </option>
                        <option value="Utilities" <%=stock.sector==='Utilities' ? 'selected' : '' %>>Utilities</option>
                        <option value="Basic Materials" <%=stock.sector==='Basic Materials' ? 'selected' : '' %>>Basic
                            Materials</option>
                    </select>
                </div>
            </div>

            <div class="admin-form-footer">
                <a href="/admin/stocks" class="btn btn-outline">Cancel</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>