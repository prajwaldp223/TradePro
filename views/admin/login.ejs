<div class="admin-login-container">
    <div class="admin-login-card">
        <div class="admin-login-header">
            <h1 class="admin-login-title">TradePro Admin</h1>
            <p class="admin-login-subtitle">Sign in to access the admin panel</p>
        </div>
        <div class="admin-login-body">
            <% if (typeof error_msg !=='undefined' && error_msg) { %>
                <div class="alert alert-danger mb-4">
                    <%= error_msg %>
                </div>
                <% } %>

                    <% if (typeof errors !=='undefined' && errors && errors.length> 0) { %>
                        <div class="alert alert-danger mb-4">
                            <% errors.forEach(error=> { %>
                                <p>
                                    <%= error.msg %>
                                </p>
                                <% }) %>
                        </div>
                        <% } %>

                            <form action="/admin/login" method="POST">
                                <div class="form-group">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" id="email" name="email" class="form-control"
                                        value="<%= typeof email !== 'undefined' ? email : 'admin@tradepro.com' %>"
                                        required>
                                </div>

                                <div class="form-group">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" id="password" name="password" class="form-control"
                                        placeholder="Enter password (hint: admin123)" required>
                                </div>

                                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                            </form>

                            <div class="mt-4 text-center">
                                <a href="/" class="text-muted">‚Üê Back to site</a>
                            </div>
        </div>
    </div>
</div>